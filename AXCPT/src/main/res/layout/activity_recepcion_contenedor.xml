            app:layout_constraintEnd_toStartOf="@+id/txtv_OC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:scrollbarThumbVertical="@drawable/thumb_scrollbar"
        android:scrollbarTrackVertical="@drawable/track_scrollbar_transp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="67dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConstraintLayout6">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ConstraintDeLosEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView44"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Posición"
                android:textColor="@color/blancoLetraStd"
                android:textSize="18dp"
                android:textStyle="bold"
              />

            <EditText
                android:id="@+id/edtx_Posicion"
                style="@style/Estilo_EditText_Reg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/capturar_posicion"
                android:inputType="textPersonName"
                android:layout_marginStart="5dp"
            />

        </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView80"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Números de serie"
                    android:textColor="@color/blancoLetraStd"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView44" />

                <include
                    android:id="@+id/vw_spinner2"
                    layout="@layout/vw_spinner"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:text="Empaques Registrados"
                    android:textColor="@color/blancoLetraStd"
                    android:textSize="18dp"
                    android:textStyle="bold"
                 />

                <TextView
                    android:id="@+id/txtv_EmpReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/blancoLetraStd"
                    android:textSize="18dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                   />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Posición"
                    android:textColor="@color/blancoLetraStd"
                    android:textSize="18dp"
                    android:textStyle="bold"
            />

                <TextView
                    android:id="@+id/txtv_Pallet"
                    style="@style/EstiloTexto_Sugerencia_Reg_Consulta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/blancoLetraStd"
                    android:textSize="18dp"
                    android:layout_marginStart="5dp"
                    />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtv_contenedor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Contenedor"
                    android:textColor="@color/blancoLetraStd"
                    android:textSize="18dp"
                    android:textStyle="bold"
                   />

                <EditText
                    android:id="@+id/edtx_contenedor"
                    style="@style/Estilo_EditText_Reg"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginStart="5dp"
                    android:hint="Capturar contenedor"
                    android:inputType="textPersonName"
                    android:layout_gravity="center"
                  />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ConstraintLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orilla_layout"
                >

                    <TextView
                        android:id="@+id/textView391"
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="SKU"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView51"
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Cant.Total"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView391" />

                    <TextView
                        android:id="@+id/textView401"
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="UM"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView51" />

                    <TextView

                        android:id="@+id/txtvSKUCont"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="-"
                        app:layout_constraintBottom_toBottomOf="@+id/textView391"
                        app:layout_constraintEnd_toEndOf="parent"
