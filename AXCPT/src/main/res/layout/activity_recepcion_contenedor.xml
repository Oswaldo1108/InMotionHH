                        android:layout_marginStart="4dp"

                        android:text="-"
                        app:layout_constraintBottom_toBottomOf="@+id/textView51"
                        app:layout_constraintStart_toEndOf="@+id/textView51"
                        app:layout_constraintTop_toTopOf="@+id/textView51" />

                    <TextView

                        android:id="@+id/txtvUMCont"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="8dp"
                        android:text="-"
                        app:layout_constraintBottom_toBottomOf="@+id/textView401"
                        app:layout_constraintStart_toEndOf="@+id/textView401"
                        app:layout_constraintTop_toTopOf="@+id/textView401" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvcambio"
                    style="@style/EstiloTexto_Blanco_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piezas"
                  />

                <EditText
                    android:id="@+id/edtx_Empaque"
                    style="@style/Estilo_EditText_Reg"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:ems="10"
                    android:hint="Capturar cantidad"
                    android:inputType="number"
                    />

                <Switch
                    android:id="@+id/Checkboxsku"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="SKU"
                    android:thumb="@drawable/thumb_switch"
                    android:textColor="@color/blancoLetraStd"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"/>



            </androidx.appcompat.widget.LinearLayoutCompat>





        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.4"
        android:animateLayoutChanges="true"
        android:background="#000000"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>