<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoAzul"
    tools:context="com.automatica.AXCPT.c_Consultas.consultas_ConsultaEmpaque">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.4"
        android:animateLayoutChanges="true"
        android:background="#000000"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:indeterminate="true" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtv_empaque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Paquete:"
        android:textColor="@color/blancoLetraStd"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/edtx_CodigoEmpaque"
        style="@style/Estilo_EditText_Reg"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="@string/escanear_empaque"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtv_empaque"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtx_CodigoEmpaque">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orilla_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="C贸digo del paquete:" />

                    <TextView
                        android:id="@+id/tx_Codigo_empaque"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="C贸digo de pallet:" />

                    <TextView
                        android:id="@+id/tx_Codigo_pallet"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Ubicaci贸n:" />
                    <TextView
                        android:id="@+id/tx_ubicacion"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Producto:" />
                    <TextView
                        android:id="@+id/tx_Num_Parte"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Descripci贸n:" />


                    <TextView
                        android:id="@+id/tx_Desc"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Orden:" />
                    <TextView
                        android:id="@+id/tx_Orden1"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Lote:" />
                    <TextView
                        android:id="@+id/tx_Lote"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Cantidad original:" />
                    <TextView
                        android:id="@+id/tx_cant_Orig"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Cantidad actual:" />
                    <TextView
                        android:id="@+id/tx_cant_Act"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Tipo:" />
                    <TextView
                        android:id="@+id/tx_revision"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Estatus:" />
                    <TextView
                        android:id="@+id/tx_estatus"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/EstiloTexto_Blanco_Bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha de creaci贸n:" />
                    <TextView
                        android:id="@+id/tx_fecha"
                        style="@style/EstiloTexto_Blanco_Reg"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
