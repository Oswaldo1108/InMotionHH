<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="150dp" />
                    <corners android:radius="2dip" />
                    <stroke android:width="1dp" android:color="@color/blancoLetraStd" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_info_24" android:gravity="top|end" android:width="20dp" android:height="20dp">

            </item>

        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="150dp" />
                    <corners android:radius="2dip" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_info_24" android:gravity="top|end" android:width="20dp" android:height="20dp">

            </item>

        </layer-list>
    </item>
</selector>