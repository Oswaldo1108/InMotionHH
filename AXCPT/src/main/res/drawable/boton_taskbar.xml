<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:state_enabled="true">
        <inset android:insetRight="-4dp" android:insetLeft="-4dp" android:insetTop="-4dp">
            <shape>
                <solid android:color="@color/amarilloInMotion"/>
                <stroke android:width="2dip" android:color="@color/grisAXCdisabled" />
                <corners android:radius="2dip"/>
                <padding android:left="0dip" android:top="0dip" android:right="0dip" android:bottom="0dip" />
            </shape>
        </inset>

    </item>
    <item
        android:state_enabled="true">
        <inset android:insetRight="-4dp" android:insetLeft="-4dp" android:insetTop="-4dp">
            <shape>
                <solid android:color="@color/verdeAXCMid"/>
                <stroke android:width="2dip" android:color="@color/amarilloInMotion" />
                <corners android:radius="2dip"/>
                <padding android:left="0dip" android:top="0dip" android:right="0dip" android:bottom="0dip" />
            </shape>
        </inset>

    </item>
    <item android:state_enabled="false">
        <inset android:insetRight="-4dp" android:insetLeft="-4dp" android:insetTop="-4dp">
            <shape>
                <solid android:color="@color/amarilloInMotion"/>
                <stroke android:width="2dip" android:color="@color/verdeAXCMid" />
                <corners android:radius="2dip"/>
                <padding android:left="0dip" android:top="0dip" android:right="0dip" android:bottom="0dip" />
            </shape>
        </inset>

    </item>
</selector>