<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center_vertical">
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <solid android:color="#FFFFFF"/>
                <size
                    android:height="3dp"
                    android:width="100dp"/>
                <corners android:radius="2dip"/>
                <stroke android:color="@color/grisAXC"
                    android:width="1px"/>
            </shape>
    </item>
    <item
        android:width="3dp"
        android:height="3dp"
        android:gravity="start">
        <rotate android:drawable="@drawable/ic_baseline_arrow_upward_24"
            android:fromDegrees="270"/>
    </item>
    <item android:gravity="end"
        android:width="3dp"
        android:height="3dp">
        <rotate android:drawable="@drawable/ic_baseline_arrow_downward_24"
            android:fromDegrees="270">
        </rotate>
    </item>
</layer-list>
