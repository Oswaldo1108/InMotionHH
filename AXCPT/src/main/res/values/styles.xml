<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/negroN</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/blancoLetraStd</item>
        <item name="itemBackground">@drawable/rounded_image_button_reg</item>
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/blancoLetraStd</item>
        <item name="android:itemBackground">@color/fondoAzulSemiTransp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/blancoLetraStd</item>
        <item name="android:textColorPrimary">@color/blancoLetraStd</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/fondoAzul</item>
        <item name="android:textAppearanceMedium">@style/MyAlertTextAppearance</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="MyAlertTextAppearance" parent="AlertDialog">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/blancoLetraStd</item>
    </style>
 <style name="PositiveButtonStyle" parent="@style/AlertDialog">
        <!-- text color for the button -->
        <item name="android:textColor">@color/blancoLetraStd</item>
        <!-- Background tint for the button -->
        <item name="android:background">@drawable/boton_dialog_reg</item><!--aquÃ­ para ver los colores de los botones-->
        <item name="paddingEnd">2dp</item>
        <!--<item name="backgroundTint">@color/negroTrans</item>-->
    </style>

    <style name="NegativeButtonStyle" parent="@style/AlertDialog">
        <item name="android:textColor">@color/blancoLetraStd</item>
        <!-- Background tint for the button -->
        <item name="android:background">@drawable/boton_dialog_reg</item>
        <item name="paddingEnd">2dp</item>
        <!--<item name="backgroundTint">@color/negroTrans</item>-->
    </style>

