    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="scrollbarStyleVertical" parent="TextAppearance.AppCompat">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@drawable/track_scrollbar</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:background">@drawable/orilla_layout_scrollview_vertical</item>

    </style>
    <style name="scrollbarStyleMenu" parent="TextAppearance.AppCompat">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@drawable/track_scrollbar_transp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="scrollbarStyleMenuFrag" parent="TextAppearance.AppCompat">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@drawable/track_scrollbar_transp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>
    <style name="scrollbarStyleConsulta">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@drawable/track_scrollbar_transp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <style name="scrollbarStyleHorizontal" parent="TextAppearance.AppCompat">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/thumb_scrollbar_horizontal</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/track_scrollbar_horizontal</item>
