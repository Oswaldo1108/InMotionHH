<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DialogWhenLarge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ButtonView" parent="@style/AlertDialog">
        <!-- text color for the button -->
        <!-- Background tint for the button -->
        <item name="android:background">@drawable/boton_dialog_reg</item>
        <item name="paddingEnd">2dp</item>
        <!--<item name="backgroundTint">@color/negroTrans</item>-->
    </style>
    <style name="Estilo_Boton_AXC_rojo" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/negroN</item>
        <item name="android:background">@drawable/orilla_boton_rojo</item>
        <item name="android:textColorPrimary">@color/negroN</item>
        <item name="android:height">74dp</item>
        <item name="android:width">155dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/negroN</item>
        <item name="android:textSize">@dimen/txtsize</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">#000000</item>
        <item name="android:textSize">20dp</item>
    </style>


